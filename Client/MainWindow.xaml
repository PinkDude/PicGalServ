<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="854" Width="1746">
    <Grid x:Name="MainGrid" Background="#FFCF4141" RenderTransformOrigin="0.5,0.5" Margin="0,0,2,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="799*"/>
            <RowDefinition Height="24*"/>
        </Grid.RowDefinitions>
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>
        <Grid Height="100" Margin="167,10,89,0" VerticalAlignment="Top" Background="#FF8F1833" MinWidth="702">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1109*"/>
                <ColumnDefinition Width="372*"/>
            </Grid.ColumnDefinitions>
            <Grid.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF161ED6" Offset="1"/>
                </LinearGradientBrush>
            </Grid.OpacityMask>
            <Button x:Name="Pictures" HorizontalAlignment="Left" Margin="69,10,0,0" VerticalAlignment="Top" Width="139" Height="63" Click="Button_Click_2">
                <Button Content="Картины" Width="129" Height="53" FontSize="24"/>
            </Button>
            <Button x:Name="Autors" HorizontalAlignment="Left" Margin="261,10,0,0" VerticalAlignment="Top" Width="191" Height="63" Click="Autors_Click">
                <Button Content="Авторы" Width="163" Height="53" FontSize="24"/>
            </Button>
            <Grid x:Name="LogInGrid" HorizontalAlignment="Right" Height="86" Margin="0,4,22,0" VerticalAlignment="Top" Width="400" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2"/>
        </Grid>
        <Grid x:Name="CommonGrid" Margin="10,115,0,0" Grid.RowSpan="2"/>

    </Grid>
</Window>
